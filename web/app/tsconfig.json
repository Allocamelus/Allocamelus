{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "es2020",
    "allowJs": true,
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
